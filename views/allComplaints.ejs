<header class="jumbotron">
    <table>
        <tr>
            <td><h1 class="mt-4">All Complaints in DB</h1></td>
            <td colspan="3"></td>
            <td style="margin-left: 30px;">
                <form action="/complaints/search" class="search-form">
                    <input type="search" name="searchItem" id="search" placeholder="Type your search word...">
                    <input type="submit" value="Search">
                </form>
            </td>
        </tr>
    </table>
</header>

<table class="table table-striped">
    <thead>
        <tr>
            <th>S/N</th>
            <th>Full Name</th>
            <th>Staff ID / Matric</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Summary</th>
            <th>Uploaded Filename</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% if (list.length > 0){ %>
            <% let i = 0  %>
            <% list.forEach(function(row){ %>
                <tr>
                    <td><%= ++i %></td>
                    <td><%= row.name %></td>
                    <td><%= row.staffID %></td>
                    <td><%= row.email %></td>
                    <td><%= row.phone %></td>
                    <td><%= row.summary %></td>
                    <td><%= row.fileName %></td> 
                    <td>
                        <a href="/edit/complaints/edit/<%= row._id %>"><i class="fa fa-filter fa-lg" aria-hidden="true"></i></a>

                        <form action="/edit/complaints/delete/<%= row._id %>?_method=DELETE" method="post"> 
                            <button
                                type="submit"
                                onclick="return confirm('Are you sure you want to delete this record?')"><i
                                class="fa fa-trash fa-lg" aria-hidden="true"></i>
                            </button>
                        </form>        
                    </td>
                </tr>
            <% }) %>
        <% }else{ %>
            <tr>
                <td colspan="7">No Record Found</td>
            </tr>
        <% } %>
        
    </tbody>
</table>


<a href="/complaints/former" class="btn btn-secondary">Toggle View</a>
<a href="/complaints" class="btn btn-secondary">Refresh</a> 









