

<div class="container">
    <div class="row">
        <% if (list.length > 0){ %>
            <% for(let i = 0; i < list.length; i++){ %>
                <div class="col-md-3 col-sm-6"> <!-- this makes it responsive -->
                    <div class="card">
                        <img src="/uploads/<%= list[i].fileName %>" alt="">
                        <div class="caption">
                            <h4><%= list[i].name %></h4>
                        </div>
                    </div>
                </div>        
            <% } %>
        <% }else{ %>            
            <span>No Record Found</span>     
        <% } %>
    </div>
</div>